#include "gxl_p212_2g.dts"

/{
	coreelec-dt-id = "gxl_p212_2g_kvim";
	model = "Khadas VIM";

	/delete-node/ mtd_nand;

/* look into gpiomem driver in Khadas kernel */
	gpiomem {
		compatible = "amlogic, gpiomem";
		reg = <0x0 0xda834000 0x0 0x1000>;
		status = "okay";
	};

	gpio_keypad {
		compatible = "amlogic, gpio_keypad";
		status = "okay";
		scan_period = <20>;
		key_num = <1>;
		key_name = "power";
		key_code = <116>;
		key-gpios = <&gpio_ao  GPIOAO_2  GPIO_ACTIVE_HIGH>;
		detect_mode = <0>;/*0:polling mode, 1:irq mode*/
	};

	/delete-node/ sysled;
	gpioleds {
		compatible = "gpio-leds";
		status = "okay";

		sys_led {
			label="sys_led";
			gpios=<&gpio_ao GPIOAO_9 GPIO_ACTIVE_HIGH>;
			default-state ="on";
			retain-state-suspended;
			linux,default-trigger="default-on";
		};
	};

	rtc {
		status = "disabled";
	};

	jtag {
		status = "disabled";
		select = "disable";
	};

	aml_sound_meson {
		/delete-property/ mute_gpio-gpios;
		/delete-property/ mute_inv;
	};
};

&i2c0 {
	status = "okay";
	clock-frequency = <400000>;
	pinctrl-names="default";
	pinctrl-0=<&a_i2c_master>;
};

&i2c1 {
	status = "okay";
	clock-frequency = <400000>;
	pinctrl-names="default";
	pinctrl-0=<&b_i2c_master>;

	hym8563: hym8563@51 {
		compatible = "haoyu,hym8563";
		reg = <0x51>;

		#clock-cells = <0>;
	};

	khadas-mcu {
		compatible = "khadas-mcu";
		reg = <0x18>;
		fan,trig_temp_level0 = <50>;
		fan,trig_temp_level1 = <60>;
		fan,trig_temp_level2 = <70>;
		hwver = "VIM1.V12"; /* Will be updated in uboot. */
	};
};

&uart_AO_B {
	status = "okay";
};
