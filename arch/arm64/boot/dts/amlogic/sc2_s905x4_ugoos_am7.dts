#include "coreelec_sc2.dtsi"

/ {
	model = "Ugoos AM7";
	coreelec-dt-id = "sc2_s905x4_ugoos_am7";

	/delete-node/ memory@00000000;
	/delete-node/ rtc;

	wifi{
		dhd_static_buf; /* if use bcm wifi, config dhd_static_buf */
	};

	gpioleds {
		/delete-node/ sys_led;

		/* red led */
		net_red {
			label = "net_red";
			gpios = <&gpio GPIOD_11 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "default-on";
			retain-state-suspended;
		};

		/* green led */
		net_green {
			label = "net_green";
			gpios = <&gpio GPIOD_10 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "default-on";
		};

		/* blue led */
		net_blue {
			label = "net_blue";
			gpios = <&gpio GPIOH_7 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "default-on";
			retain-state-shutdown;
		};
	};

	auge_sound {
		/delete-property/ avout_mute-gpios;

		aml-audio-card,dai-link@1 {
			codec {
				sound-dai = <&es8388>;
			};
		};
	};

	cvbsout {
		/* default: auto,
		switch-default-enable;  force enable
		switch-default-disable; force disable */
		out-switch-gpios = <&gpio GPIOE_2 GPIO_ACTIVE_LOW>;
	};

	regulator-vbus_usb {
		compatible = "regulator-fixed";
		regulator-name = "vbus_usb";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		gpio = <&gpio GPIOH_6 GPIO_ACTIVE_HIGH>;
		enable-active-high;
		regulator-boot-on;
		regulator-always-on;
	};
};

&pinctrl_periphs {
	tdmb_mclk: tdmb_mclk {
		mux { /* GPIOD_9 */
			groups = "mclk1";
			function = "mclk";
			drive-strength = <2>;
		};
	};

	tdm_b: tdm_b {
		mux { /* GPIOD_8, GPIOD_7, GPIOD_6, GPIOD_4 */
			groups = "tdm_sclk1",
				"tdm_fs1",
				"tdm_d0",
				"tdm_d1";
			function = "tdm";
		};
	};

	tdmin_b: tdmin_b {
		mux { /* GPIOD_4 */
			groups = "tdmb_din1";
			function = "tdma_in";
		};
	};

	spdifout_a_mute: spdifout_a_mute {
		mux { /* GPIOH_4 */
			groups = "GPIOH_4";
		};
	};
};

&tdmb {
	clocks = <&clkaudio CLKID_AUDIO_MCLK_B
			&clkaudio CLKID_AUDIO_MCLK_PAD1
			&clkc CLKID_MPLL2
			&clkaudio CLKID_AUDIO_SPDIFOUT_A>;
	pinctrl-0 = <&tdm_b
		&tdm_d0_pins
		&tdm_d1_pins
		&tdmb_mclk
		&tdm_clkb_pins>;
	/delete-property/ mclk_pad;
};

&ethmac {
	pinctrl-names = "external_eth_pins";
	pinctrl-0 = <&external_eth_pins>;
	internal_phy = <0>;
	auto_cali_idx = <1>;
	/delete-property/ cali_val;
	/delete-property/ mc_val;
	rst_pin-gpios = <&gpio GPIOZ_15 GPIO_ACTIVE_LOW>;
};

&i2c3 {
	status = "okay";
	clock-frequency = <100000>; /* default 100k */

	hym8563: hym8563@51 {
		compatible = "haoyu,hym8563";
		reg = <0x51>;
		#clock-cells = <0>;
		clock-frequency = <32768>;
		clock-output-names = "xin32k";
	};

	es8388: es8388@10 {
		status = "okay";
		compatible = "everest,es8388";
		#sound-dai-cells = <0>;
		reg = <0x10>;
		/*spk-con-gpio = <&gpio GPIOA_6 0x00>;*/
		def-vol = <0x1d>;
		def-dacvol = <0x0a>;
	};
};

&pinctrl_audio {
	tdm_d0_pins: tdm_d0_pin {
		mux {
			groups = "tdm_d0";
			function = "tdmoutb_lane0";
		};
	};

	tdm_d1_pins: tdm_d1_pin {
		mux {
			groups = "tdm_d1";
			function = "tdminb_lane1";
		};
	};

	tdm_clkb_pins: tdm_clkb_pin {
		mux {
			groups = "tdm_sclk1", "tdm_lrclk1";
			function = "tdm_clk_outb";
		};
	};
};

&usb3_phy_v2 {
	default-host; // or default-otg, or nothing for auto
};

&sd_emmc_b {
	status = "disabled";
};
